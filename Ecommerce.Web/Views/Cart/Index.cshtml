
<div class="row border rounded-3">
	<div class="col-md-8 p-3">
		<h4>Shopping Cart</h4>
		<hr />

		<table class="table align-middle">
			<tbody>
				@foreach(var item in ViewBag.CartItems)
				{
					<tr>
						<td>
							<img src="/images/products/@item.Product.ImageUrl" alt="@item.Product.Name" class="rounded" width="100" />
						</td>
						<td>
							<h4>@item.Product.Name</h4>
						</td>
						<td style="white-space: nowrap">
							<button type="button" class="btn btn-outline-secondary">-</button>
							<span class="border rounded-3 p-2 m-1">@item.Quantity</span>
							<button type="button" class="btn btn-outline-secondary">+</button>
						</td>
						<td>
							@(item.UnitPrice * item.Quantity)$
						</td>
						<td>
							<i class="bi bi-trash text-danger h4" style="cursor: pointer"></i>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	
</div>