@inject UserManager<IdentityUser> UserManager
@model ProfileVM

@{
	var appUser = await UserManager.GetUserAsync(User) as ApplicationUser;

	string userRole = string.Empty;
	if(User.IsInRole(SD.Role_Admin)) userRole = SD.Role_Admin;
	else if (User.IsInRole(SD.Role_Customer)) userRole = SD.Role_Customer;
	else if (User.IsInRole(SD.Role_Seller)) userRole = SD.Role_Seller;
}
<div class="row">
	<div class="col-md-8 mx-auto rounded border p-4 form-card">
		<h2 class="mb-3 text-center fw-bold form-title">Profile</h2>
		<hr />

		@if(ViewBag.ErrorMessage != null)
		{
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				@ViewBag.ErrorMessage
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}

		<div class="row mb-2">
			<div class="col-sm-4 fw-bold">First Name</div>
			<div class="col-sm-8">@appUser?.FirstName</div>
		</div>
		<div class="row mb-2">
			<div class="col-sm-4 fw-bold">Last Name</div>
			<div class="col-sm-8">@appUser?.LastName</div>
		</div>
		<div class="row mb-2">
			<div class="col-sm-4 fw-bold">Email</div>
			<div class="col-sm-8">@appUser?.Email</div>
		</div>
		<div class="row mb-2">
			<div class="col-sm-4 fw-bold">Phone Number</div>
			<div class="col-sm-8">@appUser?.PhoneNumber</div>
		</div>
		<div class="row mb-2">
			<div class="col-sm-4 fw-bold">City</div>
			<div class="col-sm-8">@appUser?.City</div>
		</div>
		<div class="row mb-2">
			<div class="col-sm-4 fw-bold">Address</div>
			<div class="col-sm-8">@appUser?.Address</div>
		</div>
		<div class="row mb-2">
			<div class="col-sm-4 fw-bold">Role</div>
			<div class="col-sm-8">@userRole</div>
		</div>
		<div class="row mb-2">
			<div class="col-sm-4 fw-bold">Created At</div>
			<div class="col-sm-8">@appUser?.CreatedAt</div>
		</div>

		<hr />
		
		<div>
			<button class="btn btn-primary" type="button" data-bs-toggle="modal" 
			data-bs-target="#editProfileModal">
				Edit Profile
			</button>
			<a class="btn btn-warning" asp-controller="Account" asp-action="ChangePassword">Edit Password</a>
		</div>
	</div>
</div>

<div class="modal fade" id="editProfileModal" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5">Edit Profile</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form method="post">
					<div class="row mb-2">
						<label class="col-sm-4 col-form-label">First Name</label>
						<div class="col-sm-8">
							<input asp-for="FirstName" class="form-control"/>
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
					</div>
					<div class="row mb-2">
						<label class="col-sm-4 col-form-label">Last Name</label>
						<div class="col-sm-8">
							<input asp-for="LastName" class="form-control" />
							<span asp-validation-for="LastName" class="text-danger"></span>
						</div>
					</div>
					<div class="row mb-2">
						<label class="col-sm-4 col-form-label">Email</label>
						<div class="col-sm-8">
							<input asp-for="Email" class="form-control" />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
					</div>
					<div class="row mb-2">
						<label class="col-sm-4 col-form-label">Phone Number</label>
						<div class="col-sm-8">
							<input asp-for="PhoneNumber" class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
					</div>
					<div class="row mb-2">
						<label class="col-sm-4 col-form-label">City</label>
						<div class="col-sm-8">
							<input asp-for="City" class="form-control" />
							<span asp-validation-for="City" class="text-danger"></span>
						</div>
					</div>
					<div class="row mb-2">
						<label class="col-sm-4 col-form-label">Address</label>
						<div class="col-sm-8">
							<input asp-for="Address" class="form-control" />
							<span asp-validation-for="Address" class="text-danger"></span>
						</div>
					</div>

					<div class="row justify-content-around mt-4">
						<div class="col-sm-4 d-grid">
							<button type="submit" class="btn btn-primary">Save Changes</button>
						</div>
						<div class="col-sm-4 d-grid">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

