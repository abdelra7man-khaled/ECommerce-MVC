
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ecommerce</title>
	<link rel="icon" type="image/x-icon" href="~/images/icon.png" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark text-white bg-primary border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/icon.png" width="30" class="me-2"/> Ecommerce
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Store" asp-action="Index">Store</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                    </ul>

                    <ul class="navbar-nav me-2">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart3 h3"></i>
                                <span id="CartSize" class="badge text-bg-light" style="vertical-align: top">
									@CartHelper.GetCartSize(Context.Request, Context.Response)
                                </span>
                            </a>
                        </li>
                    </ul>
                    @if(SignInManager.IsSignedIn(User))
                    {
						var appUser = await UserManager.GetUserAsync(User) as ApplicationUser;

                        @if(User.IsInRole(SD.Role_Admin))
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                       @(appUser?.FirstName + " " + appUser?.LastName + " (Admin)") 
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index">Products</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="AdminOrder" asp-action="Index">Orders</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Index">Users</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                    </ul>
                                </li>
                            </ul>
                        }
                        else if (User.IsInRole(SD.Role_Customer))
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @(appUser?.FirstName + " " + appUser?.LastName)
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                    </ul>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                            </ul>
                        }
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    @if(ViewData["HomePage"] == null)
    {
        <div class="container mt-3">
            <main role="main" class="pb-3">
                <partial name="_Notification" />
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <partial name="_Notification" />
        @RenderBody()
    }

    <footer class="border-top footer bg-primary text-muted">
        <div class="container text-center" style="color:white">
            Made With <i class="bi bi-heart-fill"></i> by Abdelrahman Khaled
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.tiny.cloud/1/032knlidd6bl08xa8zsaom8ipki7zix0tem6jjt83a0sufq8/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    </script>
    <script>
        function getShoppingCart()
        {
			const cookieName = "shopping_cart";
			let cookieArray = document.cookie.split(';');

            for(let i = 0; i < cookieArray.length; i++) {
                let cookie = cookieArray[i];
                if (cookie.includes(cookieName)) 
                {
                    let cookieValue = cookie.substring(cookie.indexOf("=") + 1);
                    
                    try
                    {
                        let cart = JSON.parse(atob(cookieValue));
						return cart;
                    }
                    catch(exception)
                    {
                        break;
                    }
                }
			}

            return {};
        }

        function saveCart(cart)
        {
			let cartStr = btoa(JSON.stringify(cart));

			let date = new Date();
            date.setDate(date.getDate() + 365);
			document.cookie = "shopping_cart=" + cartStr + ";expires=" + date.toUTCString() + ";path=/; SameSite=Strict; Secure";
        }

        function addToCart(button , id)
        {
			let cart = getShoppingCart();
            let quantity = cart[id];

            if(isNaN(quantity))
            {
				cart[id] = 1;
            }
            else
            {
				cart[id] = Number(quantity) + 1;
            }

			saveCart(cart);
			button.innerHTML = "Added <i class='bi bi-check-lg'></i>";

			let cartSize = 0;
            for(var cartItem of Object.entries(cart))
            {
				quantity = cartItem[1];
                if(isNaN(quantity)) continue;

				cartSize += Number(quantity);
            }
			document.getElementById("CartSize").innerHTML = cartSize;
        }

        function increaseQuantity(id)
		{
            let cart = getShoppingCart();
            let quantity = cart[id];
            if(isNaN(quantity))
			{
                cart[id] = 1;
            }
            else
            {
                cart[id] = Number(quantity) + 1;
            }

			saveCart(cart);
			location.reload();
        }

		function decreaseQuantity(id)
        {
            let cart = getShoppingCart();
            let quantity = cart[id];
			if(isNaN(quantity))
            {
                return;
            }
            
			quantity = Number(quantity);

            if(quantity > 1)
            {
                cart[id] = quantity - 1;
                saveCart(cart);
                location.reload();
            }
        }

        function remove(id)
        {
            let cart = getShoppingCart();
            if(cart[id]) 
            {
                delete cart[id];
                saveCart(cart);
			    location.reload();
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


